#Limble API
CLIENT_ID=changeme
CLIENT_SECRET=changeme

# Units for downtime values from Limble tasks
# Options: "minutes" (default), "hours", or "seconds"
DOWNTIME_UNITS=seconds

# Mappings file for assets in Limble
MAPPINGS_PATH=C:\Users\user-path-to-mappings.json

# Base URL for Limble API requests
API_BASE_URL=https://api.limblecmms.com:443
PORT=####
LOCAL_IP=0.0.0.0
ADMIN_PASSWORD=changeme

# Minutes before cached KPI and status data expires
CACHE_TTL_MINUTES=60

# How often expired cache entries are cleared
CACHE_CHECK_PERIOD_SECONDS=1800

# Endpoint used by the frontend to force a cache refresh
STATUS_REFRESH_ENDPOINT=/api/cache/refresh

# Azure SQL
AZURE_SQL_SERVER=changeme.net
AZURE_SQL_DB=changeme
AZURE_SQL_USER=changeme
AZURE_SQL_PASS=changeme

# Optional webhook for ETL alerts
TEAMS_WEBHOOK_URL=

# Optional debug flag
DEBUG_KPIS=1

# Expected machine run schedule
# EXPECTED_RUN_DAYS accepts Mon-Fri, Sun-Sat, or comma-separated day abbreviations
EXPECTED_RUN_DAYS=Mon-Fri
# Hours per run day
EXPECTED_HOURS_PER_DAY=24

# SharePoint Excel for Production Data
GRAPH_TENANT_ID=...
GRAPH_CLIENT_ID=...
GRAPH_CLIENT_SECRET=...

SP_SITE_ID=...            # SharePoint Site ID
SP_DRIVE_ID=...           # Drive ID (document library)
SP_ITEM_ID=...            # File (driveItem) ID of the workbook
SP_SHEET_NAME=DATA
SP_TABLE_NAME=Table2

